
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
	android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="5dp"
    tools:context=".AddDebt" >
	    <LinearLayout
	        android:padding="5sp"
	        android:layout_marginLeft="2sp"
	        android:layout_marginRight="2sp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
			<TextView
		         android:id="@+id/textView3"
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:layout_marginTop="10sp"
		         android:layout_marginLeft="5sp"
		         android:text="TYPE OF DISASTER"
		         android:textAppearance="?android:attr/textAppearanceSmall"
		         android:textColor="#163F5F"
		         android:textStyle="bold" />

			     <LinearLayout
			         android:id="@+id/linearLayout1"
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content" >

			         <Spinner
			             android:id="@+id/spinnerTypeDisaster"
			             android:layout_width="fill_parent"
		            	 android:textColor="#163F5F"
			             android:layout_height="wrap_content"
			             android:textSize="18dp"
			             android:layout_weight="1.5" />
			 </LinearLayout>
		     
			    <EditText
			        android:id="@+id/txtDescription"
			    	android:textColorHint="#858585"
		        	android:hint="Details"
			        android:drawablePadding="5dp"
	            	android:maxLength="30"
			        android:textSize="18dp"
		            android:textColor="#163F5F"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:ems="10"
				    android:inputType="textPersonName" />
	        	<RelativeLayout
					android:id="@+id/layoutAddMore"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" >
			 		<TextView
			            android:id="@+id/imgViewMore"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5sp"
				        android:paddingTop="10sp"
			            android:text="Add More Info"
			            android:textAppearance="?android:attr/textAppearanceMedium"
			            android:textColor="#8C8C8C" />
			    </RelativeLayout>
			    
	        	<LinearLayout
					android:id="@+id/layoutViewMore"
		            android:layout_width="match_parent"
		            android:visibility="gone"
		            android:orientation="vertical"
		            android:layout_height="wrap_content" >
					    <EditText
					        android:id="@+id/txtMobileNo"
					    	android:textColorHint="#858585"
			            	android:maxLength="25"
				        	android:hint="Mobile Number"
		         			android:textColor="#163F5F"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_centerHorizontal="true"
					        android:ems="10"
				        	android:inputType="phone" />
			    </LinearLayout>
			    <LinearLayout
					android:id="@+id/layoutViewMoreEmail"
		            android:layout_width="match_parent"
		            android:visibility="gone"
		            android:orientation="vertical"
		            android:layout_height="wrap_content" >
					    <EditText
					        android:id="@+id/txtEmail"
					    	android:textColorHint="#858585"
			            	android:maxLength="40"
				        	android:hint="Email Address"
		         			android:textColor="#163F5F"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:layout_centerHorizontal="true"
					        android:ems="10"
				        	android:inputType="textEmailAddress" />
			    </LinearLayout>
		        
			    <Button
			        android:id="@+id/btnSave"
			        android:layout_marginTop="5sp"
			        android:textColor="#FFFFFF"
			        android:layout_gravity="center"
			        android:paddingTop="5sp"
			        android:layout_marginLeft="5dp"
			        android:layout_marginRight="5dp"
			        android:paddingBottom="5sp"
        			android:background="@drawable/blue"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="Add Disaster" />
			    <DatePicker
			        android:id="@+id/datePicker"
			        android:visibility="gone"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" />
			    <TimePicker
			        android:id="@+id/timePicker"
			        android:visibility="gone"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" />
	    </LinearLayout>

</LinearLayout>
</ScrollView>
